#:kivy 2.0.0
#:import dp kivy.metrics.dp
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout

# Base Styles
<CommonLabel@MDLabel>:
    font_style: "Body1"
    theme_text_color: "Primary"
    size_hint_y: None
    height: self.texture_size[1]

<CommonTitle@MDLabel>:
    font_style: "H6"
    theme_text_color: "Primary"
    bold: True
    size_hint_y: None
    height: self.texture_size[1]

<CommonCard@MDCard>:
    style: "elevated"
    radius: dp(8)
    padding: dp(16)
    elevation: 2
    md_bg_color: app.theme_cls.bg_light

<HeaderText@MDLabel>:
    font_style: "H5"
    bold: True
    theme_text_color: "Primary"
    size_hint_y: None
    height: self.texture_size[1]

<SubHeaderText@MDLabel>:
    font_style: "H6"
    theme_text_color: "Primary"
    size_hint_y: None
    height: self.texture_size[1]

<BodyText@MDLabel>:
    font_style: "Body1"
    theme_text_color: "Secondary"

# Input Elements
<CommonTextField@MDTextField>:
    mode: "outlined"
    helper_text_mode: "on_error"
    font_size: "16sp"

<CommonButton@MDButton>:
    style: "elevated"
    size_hint: None, None
    height: dp(48)
    padding: [dp(16), 0]

# List Elements
<CommonList@MDList>:
    spacing: dp(8)
    padding: dp(8)

<CommonListItem@MDListItem>:
    size_hint_y: None
    height: dp(56)
    radius: dp(8)

# Progress Indicators
<CommonProgressBar@MDLinearProgressIndicator>:
    height: dp(4)
    radius: dp(2)

# Layout Elements
<CommonDivider@MDDivider>:
    height: dp(1)

<CommonToolbar@MDTopAppBar>:
    elevation: 2
    size_hint_y: None
    height: dp(64)
    md_bg_color: app.theme_cls.primary_color
    specific_text_color: app.theme_cls.bg_light